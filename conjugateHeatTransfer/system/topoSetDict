FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

actions
(
    {
        name    meshgridPoints;
        type    pointSet;
        action  new;
        source  labelToPoint;
        value   #include "meshgrid.csv";
    }
    {
        name    meshgridFaces;
        type    faceSet;
        action  new;
        source  pointToFace;
        sourceInfo
        {
            set     meshgridPoints;
            option  all;
        }
    }
    {
        name    meshgridCells;
        type    cellSet;
        action  new;
        source  faceToCell;
        sourceInfo
        {
            set     meshgridFaces;
            option  any;
        }
    }
);